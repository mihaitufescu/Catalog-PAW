@page
@model CatalogOnline.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}
<h1 class="text-center">User List</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Legal Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.username</td>
                <td>@user.legal_name</td>
                <td>@user.email</td>
                <td>
                    <button type="button" class="btn btn-update btn-spacing">Update</button>
                    <button type="button" class="btn btn-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-success mb-2">Add New Course</button>
