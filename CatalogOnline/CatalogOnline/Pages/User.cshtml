@page
@model CatalogOnline.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center">User List</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Legal Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.username</td>
                <td>@user.legal_name</td>
                <td>@user.email</td>
                <td>
                    <a asp-page="./EditUser" asp-route-id="@user.user_id" class="btn btn-update btn-spacing">Update</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.user_id" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/AddUser" class="btn btn-success mb-2">Add New Student</a>
