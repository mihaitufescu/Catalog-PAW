@page
@model CatalogOnline.Pages.AddUserModel
@{
    ViewData["Title"] = "Add New User";
}

<h1>Add New User</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="NewUser.username"></label>
        <input asp-for="NewUser.username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewUser.legal_name"></label>
        <input asp-for="NewUser.legal_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewUser.email"></label>
        <input asp-for="NewUser.email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewUser.password"></label>
        <input asp-for="NewUser.password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewUser.role"></label>
        <input asp-for="NewUser.role" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Add User</button>
</form>
