@page "{id:int}"
@model CatalogOnline.Pages.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="User.username"></label>
        <input asp-for="User.username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.legal_name"></label>
        <input asp-for="User.legal_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.email"></label>
        <input asp-for="User.email" class="form-control" />
    </div>
    <!--
    <div class="form-group">
        <label asp-for="User.password"></label>
        <input asp-for="User.password" type="password" class="form-control" />
    </div>
    -->
    <div class="form-group">
        <label asp-for="User.role"></label>
        <input asp-for="User.role" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
<a asp-page="./User" class="btn btn-secondary">Cancel</a>
