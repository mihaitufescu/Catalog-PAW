@page "{id:int}"
@model CatalogOnline.Pages.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>
@if (TempData["PasswordMessage"] != null)
{
    <div class="alert alert-info">@TempData["PasswordMessage"]</div>
}
<form method="post">
    <input type="hidden" asp-for="User.user_id" />
    <div class="form-group">
        <label asp-for="User.username"></label>
        <input asp-for="User.username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.legal_name"></label>
        <input asp-for="User.legal_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.email"></label>
        <input asp-for="User.email" class="form-control" />
        <span class="text-danger" asp-validation-for="User.email"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.password"></label>
        <input asp-for="User.password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.role"></label>
        <input asp-for="User.role" class="form-control" />
    </div>
    @if (Model.User.role == "student")
    {
        <div class="form-group">
            <label asp-for="User.year_of_study"></label>
            <input asp-for="User.year_of_study" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="User.group"></label>
            <input asp-for="User.group" class="form-control" />
        </div>
    }
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
<a asp-page="./User" class="btn btn-secondary">Cancel</a>
