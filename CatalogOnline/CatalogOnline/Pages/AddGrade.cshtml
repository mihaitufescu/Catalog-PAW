@page
@model CatalogOnline.Pages.AddGradeModel
@{
    ViewData["Title"] = "Add Grade";
}

<h1>Add Grade</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Grade.score">Score</label>
        <input asp-for="Grade.score" class="form-control" />
        <span class="text-danger" asp-validation-for="Grade.score"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade.type_of_exam">Type of Exam</label>
        <input asp-for="Grade.type_of_exam" class="form-control" />
        <span class="text-danger" asp-validation-for="Grade.type_of_exam"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade.percentage">Percentage</label>
        <input asp-for="Grade.percentage" class="form-control" />
        <span class="text-danger" asp-validation-for="Grade.percentage"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade.user_id">Student</label>
        <select asp-for="Grade.user_id" class="form-control">
            @foreach (var student in Model.Students)
            {
                <option value="@student.user_id">@student.username</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Grade.user_id"></span>
    </div>
    <div class="form-group">
        <label asp-for="Grade.course_id">Course</label>
        <select asp-for="Grade.course_id" class="form-control">
            @foreach (var course in Model.Courses)
            {
                <option value="@course.course_id">@course.subject</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Grade.course_id"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Grade</button>
</form>

@if (ModelState.ContainsKey("AddGradeError"))
{
    <div class="text-danger mt-2">
        @ModelState["AddGradeError"].Errors[0].ErrorMessage
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
