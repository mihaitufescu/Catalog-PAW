@page
@model CatalogOnline.Pages.AddEnrollmentModel
@{
    ViewData["Title"] = "Add Enrollment";
}

<h1>Add Enrollment</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Enrollment.user_id">Student</label>
        <select asp-for="Enrollment.user_id" class="form-control">
            @foreach (var student in Model.Students)
            {
                <option value="@student.user_id">@student.username</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Enrollment.user_id"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enrollment.course_id">Course</label>
        <select asp-for="Enrollment.course_id" class="form-control">
            @foreach (var course in Model.Courses)
            {
                <option value="@course.course_id">@course.subject</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Enrollment.course_id"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enrollment.semester">Semester</label>
        <input asp-for="Enrollment.semester" class="form-control" type="number" min="1" />
        <span class="text-danger" asp-validation-for="Enrollment.semester"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Enrollment</button>
</form>

@if (ModelState.ContainsKey("AddEnrollmentError"))
{
    <div class="text-danger mt-2">
        @ModelState["AddEnrollmentError"].Errors[0].ErrorMessage
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
