@page
@model CatalogOnline.Pages.NotificationsPageModel
@{
    ViewData["Title"] = "Notifications";
}


   <h1 class="text-center">Notification List</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Message</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notification in Model.Notifications)
            {
                <tr>
                    <td>@notification.user_id</td>
                    <td>@notification.message</td>
                    <td>@notification.date.ToString("dd-MM-yyyy")</td>
                    <td>
                    <a asp-page="./EditNotification" asp-route-id="@notification.notification_id" class="btn btn-update btn-spacing">Update</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@notification.notification_id" onsubmit="return confirm('Are you sure you want to delete this notification?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<a href="/AddNotification" class="btn btn-success mb-2">Add New Notifcation</a>

