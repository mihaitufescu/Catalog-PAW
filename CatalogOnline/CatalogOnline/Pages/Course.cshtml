@page
@model CatalogOnline.Pages.CoursePageModel
@{
    ViewData["Title"] = "Courses";
}

<h1>Course List</h1>


<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Mandatory</th>
            <th>Credits Number</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.subject</td>
                <td>@(course.mandatory ? "Yes" : "No")</td>
                <td>@course.credits_number</td>
                <td>@course.year</td>
            </tr>
        }
    </tbody>
</table>
