@page
@model CatalogOnline.Pages.CoursePageModel
@{
    ViewData["Title"] = "Courses";
  }

<title>@ViewData["Title"]</title>
    <h1 class="text-center">Course List</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Mandatory</th>
                <th>Credits Number</th>
                <th>Year</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.subject</td>
                    <td>@(course.mandatory ? "Yes" : "No")</td>
                    <td>@course.credits_number</td>
                    <td>@course.year</td>
                    <td>
                        <button type="button" class="btn btn-update btn-spacing">Update</button>
                        <button type="button" class="btn btn-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-success mb-2">Add New Course</button>

